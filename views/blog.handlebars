<link rel="stylesheet" href="/css/style.css">

<div class='add-blog-container'>
    <h2>
      Welcome to the blog!
    </h2>   
    <form class='new-blog-form'>
      <label for='blog_title'>
        Title:
      </label>
      <br />
      <textarea id='blog_title' name='blog_title' rows='2' cols='30'>
        {{title}}
      </textarea>
      <br />
      <label for='description'>
        Description:
      </label>
      <br />
      <textarea id='blog_description' name='blog_description' rows='5' cols='30'>
        {{description}}
      </textarea>
      
      <button class= 'blog-button' type='submit'>
        Submit        
      </button>
    </form>
  </div>
</div>

<!-- This is the form for adding a new blog -->
<script src='../public/js/new-blog.js'></script>
  </div>
</div>